<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#f9f5f5"
  android:orientation="vertical"
  >
  
    <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#21610B"
                android:layout_marginTop="15dip"
                android:gravity="center"
                android:textSize="25dip"
                android:text="!Bienvenido!"
                
    />


    <Button
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:text="MENU DOCTOR"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:textSize="23dp"
        android:background="#0844f9"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:text="MENU PACIENTE"
        android:id="@+id/buttonMenuPacienteAdministrador"
        android:layout_gravity="center_horizontal"
        android:textSize="23dp" />

    <TextView
                android:id="@+id/usr_name"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:textColor="#FF4000"
                android:layout_marginTop="45dip"
                android:textSize="22dip"
                android:gravity="center"                
                
    />

    <TextView
                android:id="@+id/logoff"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:textColor="#B40404"
                android:layout_marginTop="45dip"
                android:textSize="22dip"
                android:gravity="center"   
                android:text="!Cerrar SesiÃ²n!"                            
                
    />


</LinearLayout>
